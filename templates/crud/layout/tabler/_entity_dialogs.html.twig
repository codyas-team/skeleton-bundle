{# @var \Codyas\SkeletonBundle\Model\DialogDefinition dialog #}
{% for dialog in entityConfig.dialogs %}
    <div
        data-controller="csk-crud-dialog"
        data-action="csk-crud-table-record:requestDialog@window->csk-crud-dialog#requested"
        data-csk-crud-dialog-generic-error-msg-value="{{ "Something went wrong while loading the information. Please try again later." | trans }}"
        data-csk-crud-dialog-id-value="{{ dialog.id }}"
        class="modal fade modal-blur" tabindex="-1">
        <div class="modal-dialog  modal-dialog-centered {{ dialog.dialogWidthClass }}" role="document">
            <div class="modal-content">
                {% if dialog.displayHeader %}
                    <div class="modal-header" data-csk-crud-dialog-target="dialogHeader">
                        <h3 class="modal-title" data-csk-crud-dialog-target="dialogTitle">{{ dialog.label | trans }}</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="{{ "Close" | trans }}"></button>
                    </div>
                {% endif %}
                {% if not dialog.displayHeader %}
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ "Close" | trans }}"></button>
                {% endif %}
                <div class="modal-body py-4" data-csk-crud-dialog-target="dialogBody">

                </div>
                <div class="modal-footer" data-csk-crud-dialog-target="dialogFooter">
                    <div class="w-100">
                        <div class="row">
                            <div class="col">
                                <a href="#" class="btn w-100" data-bs-dismiss="modal">
                                    {{ "Cancel" | trans }}
                                </a>
                            </div>
                            {# @var \Codyas\SkeletonBundle\Model\DialogButtonDefinition buttonDefinition #}
                            {% for buttonDefinition in dialog.buttonDefinitions %}
                                <div class="col">
                                    <button type="{{ buttonDefinition.type }}" class="btn {{ buttonDefinition.cssClasses }} w-100"
                                            data-action="{{ buttonDefinition.action }}"
                                            data-csk-crud-dialog-target="button"
                                    >
                                        {% if  buttonDefinition.icon %}
                                            <i class="{{ buttonDefinition.icon }} me-1"></i>
                                        {% endif %}
                                        {{ buttonDefinition.label | trans }}
                                    </button>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}